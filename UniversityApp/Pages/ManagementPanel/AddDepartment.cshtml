@page
@model AddDepartmentModel
@inject IStringLocalizer<AddDepartmentModel> localizer
@{
}

<h2>@localizer["Create"]</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Department.DepartmentName" class="control-label"></label>
                <input asp-for="Department.DepartmentName" class="form-control" required />
                <span asp-validation-for="Department.DepartmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department.OfficeRoom.Building" class="control-label"></label>
                <input asp-for="Department.OfficeRoom.Building" class="form-control" required />
                <span asp-validation-for="Department.OfficeRoom.Building" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department.OfficeRoom.RoomNumber" class="control-label"></label>
                <input asp-for="Department.OfficeRoom.RoomNumber" class="form-control" required />
                <span asp-validation-for="Department.OfficeRoom.RoomNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="@localizer["Create"]" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./DepartmentList">@localizer["Back to Departments"]</a></div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
