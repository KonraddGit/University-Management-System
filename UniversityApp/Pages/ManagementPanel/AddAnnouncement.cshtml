@page
@model AddAnnouncementModel
@inject IStringLocalizer<AddAnnouncementModel> localizer
@{ ViewData["Title"] = "Create"; }

<h2>
    @localizer["Create"]
</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Announcement.Title" class="control-label"></label>
                <input asp-for="Announcement.Title" class="form-control" required />
                <span asp-validation-for="Announcement.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Announcement.Author" class="control-label"></label>
                <input asp-for="Announcement.Author" class="form-control" required />
                <span asp-validation-for="Announcement.Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Announcement.Description" class="control-label"></label>
                <input asp-for="Announcement.Description" class="form-control" placeholder="Description" required />
                <span asp-validation-for="Announcement.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="@localizer["Create"]" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Announcement">@localizer["Back to Announcements"]</a></div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
