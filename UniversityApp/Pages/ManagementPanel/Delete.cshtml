@page "{userId}"
@model DeleteModel
@inject IStringLocalizer<DeleteModel> localizer
@{ ViewData["Title"] = "Delete"; }


<h2>@localizer["Delete"]!</h2>
<div class="alert alert-danger">
    @localizer["Are you sure you want to delete"] @Model.UserId.FullName?
</div>
<form method="post">
    <button type="submit" class="btn btn-danger">@localizer["Yes"]!</button>
    <a asp-page="./UsersList" class="btn btn-default">@localizer["Cancel"]</a>
</form>
