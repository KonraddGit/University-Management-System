@page
@model UniversityApp.Pages.ManagementPanel.EmailModel
@{
}

<link rel="stylesheet" href="~/css/form.css" />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MailReceiver" class="control-label"></label>
                <input asp-for="MailReceiver" class="form-control" required />
                <span asp-validation-for="MailReceiver" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MailSubject" class="control-label"></label>
                <input asp-for="MailSubject" class="form-control" required />
                <span asp-validation-for="MailSubject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MailBody" class="control-label"></label>
                <textarea asp-for="MailBody" class="form-control" placeholder="Description" required ></textarea>
                <span asp-validation-for="MailBody" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>